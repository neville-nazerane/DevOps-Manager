                    </SwipeView.LeftItems>
                    <SwipeView.RightItems>
                        <SwipeItems Mode="Execute">
                            <SwipeItem
                                Text="Delete"
                                BackgroundColor="Red"
                                IconImageSource="{ext:ImageResource Source='delete.png'}"
