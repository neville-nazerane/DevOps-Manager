                                Command="{Binding DeleteCommand, Source={RelativeSource AncestorType={x:Type vm:AccountsViewModel}}}" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                </SwipeView>-->
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.FooterTemplate>
            <DataTemplate>
                <Button Text="Add"
                        Command="{Binding AddCommand}" />
            </DataTemplate>
        </CollectionView.FooterTemplate>
    </CollectionView>

